<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Accountt">
    <com.clothy.clothyandroid.widgets.BounceScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f6F7FB"
            tools:context=".fragments.AccountFragment"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <com.github.florent37.shapeofview.shapes.ArcView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                app:shape_arc_height="30dp"
                app:shape_arc_position="bottom"
                tools:ignore="MissingClass">

                <FrameLayout
                    android:background="@color/white"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"/>

                <LinearLayout
                    android:id="@+id/layout_view_center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/user_man"
                        android:elevation="4dp"
                        app:layout_scrollFlags="scroll"
                        app:layout_anchorGravity="top|center_horizontal"/>


                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gabriel, 24"
                        android:textColor="@color/md_black_1000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>


                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DÃ©veloppeur"
                        android:textColor="@color/md_black_1000"
                        android:textSize="14sp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/md_black_1000"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:text=""/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_margin="20dp">


                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:orientation="vertical"
                            android:gravity="center">


                            <LinearLayout
                                android:id="@+id/resetpassword"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:gravity="center"
                                android:elevation="2dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="@drawable/circle_gray_selector"
                                android:layout_marginBottom="5dp">
                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/ic_padlock"
                                    android:tint="#C3C7D0"
                                    tools:ignore="UseAppTint" />
                            </LinearLayout>



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reset\nPassword"
                                android:textColor="@color/md_grey_400"
                                android:textAllCaps="true"
                                android:textSize="12sp"
                                android:gravity="center"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout

                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/circle_pink_bg"
                                android:clickable="true"
                                android:elevation="2dp"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/photo"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_add_a_photo_white_24dp" />
                            </LinearLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="ajouter un media"
                                android:textAllCaps="true"
                                android:textColor="@color/md_grey_400"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:orientation="vertical"
                            android:gravity="center">
                            <LinearLayout
                                android:id="@+id/editP"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:gravity="center"
                                android:elevation="2dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="@drawable/circle_gray_selector"
                                android:layout_marginBottom="5dp">
                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/ic_edit_gray_24dp"/>
                            </LinearLayout>



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="modifier vos informations"
                                android:gravity="center"
                                android:textColor="@color/md_grey_400"
                                android:textAllCaps="true"
                                android:maxLines="2"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </RelativeLayout>



                </LinearLayout>


            </com.github.florent37.shapeofview.shapes.ArcView>






        </LinearLayout>

    </com.clothy.clothyandroid.widgets.BounceScrollView>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="380dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/baseline_logout_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Circular"
        android:onClick="goBack"/>
</RelativeLayout>