<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        android:background="@drawable/chat_app_bar"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/arrowBackButtonID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back2"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:onClick="goBack"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/user_woman_1"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="@color/black"
            android:textSize="24sp" />
        <ImageView
            android:id="@+id/locked"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_padlock"
            android:layout_marginStart="49dp"/>


    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/user_info"
        android:background="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:dividerHeight="16dp"
        android:padding="16dp"
        android:layout_weight="1"/>
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/myList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:padding="5dp">



            <ImageView
                android:id="@+id/cameraIconID"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:src="@drawable/galerie_button"
                app:tint="@color/black" />



        <LinearLayout
            android:id="@+id/middleRelativeLayoutID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/likeIconID"
            android:layout_marginStart="30dp"
            android:background="@drawable/rounded_edittext_bg"
            android:orientation="horizontal"
            android:layout_centerVertical="true">

            <EditText
                android:id="@+id/messageEdittextID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="type here..."
                android:textColor="@color/light_gray"
                android:textColorHint="@color/light_gray"
                android:layout_gravity="center"
                android:padding="7dp"
                android:textSize="12sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/likeIconID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingTop="5dp"
            android:background="#F2F2F2"
            android:src="@drawable/send_button"
            app:tint="@color/black"
            android:visibility="gone"/>

    </RelativeLayout>


</LinearLayout>
