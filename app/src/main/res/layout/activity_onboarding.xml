<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteGray"
    >



    <app.rive.runtime.kotlin.RiveAnimationView
        android:id="@+id/rive_animation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:riveResource="@raw/shapes"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >



        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="bottom"
            android:paddingStart="20dp"

            >



            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose\nYour\nOutfit\nWisely\n"
                android:textStyle="bold"
                android:textSize="60sp"
                android:layout_marginTop="16dp"
                android:textColor="@color/black"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\nClothy can choose the right outfit for you with a simple press, also here you can trade your clothes safely"

                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />




            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >


                <com.clothy.clothyandroid.utils.RiveButton
                    android:id="@+id/rive_button"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:riveResource="@raw/button"
                    app:riveAnimation="active"
                    android:layout_gravity="right"

                    />
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=" Start with clothy"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"

                    />

            </FrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0" />

        </LinearLayout>
        <!-- Right side spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

    </LinearLayout>


</FrameLayout>
