<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account">
    <com.clothy.clothyandroid.widgets.BounceScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:ignore="MissingClass">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f6F7FB"
            tools:context=".fragments.AccountFragment"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <com.github.florent37.shapeofview.shapes.ArcView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                app:shape_arc_height="30dp"
                app:shape_arc_position="bottom"
                tools:ignore="MissingClass">

                <FrameLayout
                    android:background="@color/white"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"/>

                <LinearLayout
                    android:id="@+id/layout_view_center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/user_man"
                        android:elevation="4dp"
                        app:layout_scrollFlags="scroll"
                        app:layout_anchorGravity="top|center_horizontal"/>


                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gabriel, 24"
                        android:textColor="@color/md_black_1000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>


                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DÃ©veloppeur"
                        android:textColor="@color/md_black_1000"
                        android:textSize="14sp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/md_black_1000"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:text="Institut Universitaire de la Cote"/>
                </LinearLayout>
            </com.github.florent37.shapeofview.shapes.ArcView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:weightSum="30">

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/slider_view"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="20dp"
                    app:sliderAnimationDuration="600"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderAutoCycleEnabled="true"
                    app:sliderCircularHandlerEnabled="true"
                    app:sliderIndicatorAnimationDuration="600"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="15dp"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="3dp"
                    app:sliderIndicatorRadius="2dp"
                    app:sliderIndicatorSelectedColor="@color/colorPrimary"
                    app:sliderIndicatorUnselectedColor="@color/md_blue_100"
                    app:sliderScrollTimeInSec="2"
                    app:sliderStartAutoCycle="false"

                    />


                <androidx.cardview.widget.CardView

                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:id="@+id/Logout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LOGOUT"
                            android:textSize="16sp"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>



        </LinearLayout>

    </com.clothy.clothyandroid.widgets.BounceScrollView>

</FrameLayout>